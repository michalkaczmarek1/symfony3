{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <label for="username" class="control-label">Login</label>
        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }} " required="required" autocomplete="username" />
    </div>
    
    <div class="form-group">
    	<label for="password" class="control-label">Hasło</label>
    	<input type="password" id="password" name="_password" required="required" class="form-control" autocomplete="current-password" />
	</div>
	
	<div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">Zapamiętaj mnie</label>
    </div>

	<div class="form-group">
    	<input type="submit" class="btn btn-success" id="_submit" name="_submit" value="Zaloguj się" />
    </div>
</form>